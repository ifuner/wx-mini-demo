.i-message {
    display: block;
    width: 100%;
    min-height: 32px;
    line-height: 2.3;
    position: fixed;
    top: 100px;
    left: 0;
    right: 0;
    background: #2d8cf0;
    color: #fff;
    text-align: center;
    font-size: 14px;
    z-index: 1010;
    opacity: 0;
    -webkit-transform: scale(0);
    transform-origin: center center;
    transition: all .4s ease-in-out
}

.i-message-show {
    -webkit-transform: scale(1);
    opacity: 1
}

.i-message-default {
    background: #2d8cf0
}

.i-message-success {
    background: #19be6b
}

.i-message-warning {
    background: #f90
}

.i-message-error {
    background: #ed3f14
}
