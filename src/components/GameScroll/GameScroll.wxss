.scroll-border{
    width: 100%;
    border-top: 1rpx solid rgba(72,72,72,1);
}
.scroll-view-container{
    width: 100%;
    height: 80rpx;
}

.game-scorll{
    color:rgba(130,130,130,1);
    font-weight:500;
    font-size:28rpx;
    height: 100%;
    line-height: 80rpx;
    display: flex;
    white-space: nowrap;
    width:100%;
}
.game-scorll .game-box-li{
    display: block;
    margin-right: 50rpx;
    transition: color,font-weight .2s linear;
}
.game-box-li.active{
    color:rgba(249,249,249,1);
    font-weight:600;
}
