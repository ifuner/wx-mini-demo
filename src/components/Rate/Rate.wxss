.rate-container{
    position: relative;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: auto;
    height: 20rpx;
}
.box-star {
    width:20rpx;
    height:20rpx;
    background:rgba(255,78,135,.3);
    margin-right: 10rpx;
    position: relative;
}

.box-star.active{
    background:rgba(255,78,135,1);
}

.box-star.half::before{
    content:"";
    width:10rpx;
    height:20rpx;
    background:rgba(255,78,135,1);
    position: absolute;
    z-index: 2;
    left: 0;
    top: 0;
}

