.login-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  overflow: hidden;
  background: #171716 url("https://g.baojiesports.com/bps/4c857527dceb4216925bae9b0cac083c-750-1583.png") center top no-repeat;
  background-size: cover;
  display: none;
}
.login-container.show-pop {
  display: block;
}
.login-container .logo{
  background: url("https://g.baojiesports.com/bps/03583456975f4b509184e88b909c1b0d-220-220.png") 0 0 no-repeat;
  background-size: cover;
  width: 220rpx;
  height:220rpx;
  margin: 151rpx auto 0;
}

.login-logo-hover{
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  animation-name: bounceInDown;
}
.login-text-hover{
  animation-duration: 2s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  animation-name: bounceInLeft;
}

.login-container .logo-text{
  background: url("https://g.baojiesports.com/bps/b44e3070a31f4369954e5a67933cb6b0-600-326.png") 0 0 no-repeat;
  background-size: cover;
  width:600rpx;
  height:326rpx;
  margin: 0 auto;
}

.bottom-area{
  width: 100%;
  position: fixed;

  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}

.button-group{
  width: 100%;
  height: 90rpx;
  bottom: 182rpx;
  position: fixed;
  z-index: 100;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;

}
.button-group button::after{
  border:none;
  transform: scale(1);
  border-radius: 0;
}
.share-btn{
  background: url("https://g.baojiesports.com/bps/6cd433a59a174e5eb750c726a6f01c96-329-90.png") center center no-repeat;
}
.chat-btn{
  background: url("https://g.baojiesports.com/bps/c79233b92c904b2e85071b15c3a03262-329-90.png") center center no-repeat;
}
.button-group button{
  line-height: 90rpx;
  text-align: center;
  font-size:32rpx;
  color:rgba(24,24,24,1);
  background-size: cover;
  width: 329rpx;
  font-weight:600;
  height: 100%;
  padding: 0;
  margin: 0;
  border-radius: 0;
}
.btn-hover-class {
  transform: scale(.9)!important;
}
.login-btn::after,.login-container .logo::after{
  transform: scale(1);
  border:none;
  border-radius: 0;
}
.phone-login {
  font-size:28rpx;
  font-weight:400;
  color:rgba(83,237,255,1);
  line-height:40rpx;
  bottom: 90rpx;
  position: fixed;
  z-index: 100;
  left: 50%;
  transform: translateX(-50%);
  background-color: transparent;
}

@keyframes bounceInDown {

  from,
  60%,
  75%,
  90%,
  to {
    -webkit-animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  }

  0% {
    opacity: 0;
    -webkit-transform: translate3d(0, -3000px, 0);
    transform: translate3d(0, -3000px, 0);
  }

  60% {
    opacity: 1;
    -webkit-transform: translate3d(0, 25px, 0);
    transform: translate3d(0, 25px, 0);
  }

  75% {
    -webkit-transform: translate3d(0, -10px, 0);
    transform: translate3d(0, -10px, 0);
  }

  90% {
    -webkit-transform: translate3d(0, 5px, 0);
    transform: translate3d(0, 5px, 0);
  }

  to {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}

@keyframes bounceInLeft {
  from,
  60%,
  75%,
  90%,
  to {
    -webkit-animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  }

  0% {
    opacity: 0;
    -webkit-transform: translate3d(-3000px, 0, 0);
    transform: translate3d(-3000px, 0, 0);
  }

  60% {
    opacity: 1;
    -webkit-transform: translate3d(25px, 0, 0);
    transform: translate3d(25px, 0, 0);
  }

  75% {
    -webkit-transform: translate3d(-10px, 0, 0);
    transform: translate3d(-10px, 0, 0);
  }

  90% {
    -webkit-transform: translate3d(5px, 0, 0);
    transform: translate3d(5px, 0, 0);
  }

  to {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}
